{
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "description": "Target URL to test (e.g. http://localhost:3000)"
    },
    "actions": {
      "type": "array",
      "description": "List of actions to perform on the page",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["screenshot", "click", "fill", "check_text", "get_console_logs"],
            "description": "Action type"
          },
          "selector": {
            "type": "string",
            "description": "CSS or text selector for the target element"
          },
          "value": {
            "type": "string",
            "description": "Value to fill (for fill action)"
          },
          "text": {
            "type": "string",
            "description": "Expected text (for check_text action)"
          },
          "path": {
            "type": "string",
            "description": "File path for screenshot"
          }
        },
        "required": ["type"]
      }
    },
    "wait_for_idle": {
      "type": "boolean",
      "description": "Wait for networkidle before actions (default true)"
    },
    "headless": {
      "type": "boolean",
      "description": "Run browser in headless mode (default true)"
    }
  },
  "required": ["url", "actions"]
}
